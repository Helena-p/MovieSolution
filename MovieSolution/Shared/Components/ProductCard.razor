@using MovieSolution.Models

<div class="col col-md-4 d-flex align-items-stretch">
    <div class="card flex-grow-1">

        <img src="@Product.ImageURL" class="img-fluid" alt="@Product.Title">

        <div class="card-body">
            <h5 class="card-title">@Product.Title</h5>
            <p class="card-text">@Product.Description</p>
            <a href="@($"products/{Product.Id}")" class="btn btn-primary">View&nbsp;details</a>
        </div>
    </div>
</div>

<style>
    .card {
        flex-direction: row;
        max-width: 30em;
    }

        .card img {
            max-width: 25%;
            margin: auto;
            padding: 0.5em;
            border-radius: 0.7em;
        }

    .card-text {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        word-wrap: break-word;
    }
</style>

@code {
    [Parameter]
    public ProductModel Product { get; set; }
}
